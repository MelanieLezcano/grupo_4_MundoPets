<!DOCTYPE html>
<html lang="es">
 <%- include('../partials/head',{title:"Administrador"}) %> 
<body>

  <header>
    <div class="top">
        <div class="logo">
            <a href="/"><img src="img/LogoMundoPets.png" alt="logo Mundo Pets"></a>
        </div>
    </div>
    <div class="Uno">
      <nav>
        <div class="carrito">
             <a href="/productos/carrito"><i class="fas fa-shopping-cart"></i></a> <!-- link carrito -->
        </div>
        <div class="buscador">
            <input type="text" maxlength="100" placeholder="Buscar">  <!-- barra buscador -->
        </div>
        <span class="lupa">
            <i class="fas fa-search"></i>
        </span>
        <div class="user">
            <a href="/user/login"><i class="fas fa-user"></i></a><!-- login & register -->
        </div>
        <div>
          <li><a href="/admin/lista">ADMIN</a></li>  
        </div>
        <div class="menu">
         <i class="fas fa-bars"></i>
        </div>
      </nav>
    </div>
</header>
    <main class="admin">
        <h1>Admin</h1>
        <a href="/admin/crear">
            <button type="button" class="btn btn-primary">Crear Producto Gatos</button>
        </a>
        <div class="table-responsive">
        <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Marca</th>
                <th scope="col">Nombre</th>
                <th scope="col">producto</th>
                <th scope="col">stock</th>
                <th scope="col">Precio</th>
                <th scope="col">Des</th>
                <th scope="col">Accion</th>
              </tr>
            </thead>
            <tbody>
                <% productosGatos.forEach(producto => { %>
                  <tr>
                      
                        <th scope="row"><a href="/admin/editar/<%= producto.id %>"><%= producto.id %> </a></th>
                        <td><a href="/admin/editar/<%= producto.id %>"><%= producto.marca %></a></td>
                        <td colspan="2"><a href="/admin/editar/<%= producto.id %>"><%= producto.titulo %></a></td>
                        <td><a href="/admin/editar<%= producto.id %> "><%= producto.stock %></a></td>
                        <td><a href="/admin/editar/<%= producto.id %> "><%= producto.precio %></a></td>
                        <td><a href="/admin/editar/<%= producto.id %> "><%= producto.descuento %></a></td>
                        <td>
                            <div>
                                <a href="/admin/editar/<%= producto.id%>">
                                    <button type="button" class="btn btn-success"><i class="fas fa-edit"></i></button>
                                </a>
                                <a href="/admin/delete">
                                    <button type="button" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                                </a>
                            </div>
                        </td>
                      
                      </tr>
                <% }) %>
            </tbody>
          </table>
        </div>


        <a href="/admin/crear">
          <button type="button" class="btn btn-primary">Crear Producto Perros</button>
      </a>
      <div class="table-responsive">
      <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Marca</th>
              <th scope="col">Nombre</th>
              <th scope="col">producto</th>
              <th scope="col">stock</th>
              <th scope="col">Precio</th>
              <th scope="col">Des</th>
              <th scope="col">Accion</th>
            </tr>
          </thead>
          <tbody>
              <% productosPerros.forEach(producto2 => { %>
                <tr>
                    
                      <th scope="row"><a href="/admin/editar/<%= producto2.id %>"><%= producto2.id %> </a></th>
                      <td><a href="/admin/editar/<%= producto2.id %>"><%= producto2.marca %></a></td>
                      <td colspan="2"><a href="/admin/editar/<%= producto2.id %>"><%= producto2.titulo %></a></td>
                      <td><a href="/admin/editar/<%= producto2.id %> "><%= producto2.stock %></a></td>
                      <td><a href="/admin/editar/<%= producto2.id %> "><%= producto2.precio %></a></td>
                      <td><a href="/admin/editar/<%= producto2.id %> "><%= producto2.descuento %></a></td>
                      <td>
                          <div>
                              <a href="/admin/editar/<%= producto2.id%>">
                                  <button type="button" class="btn btn-success"><i class="fas fa-edit"></i></button>
                              </a>
                              <a href="/admin/delete">
                                  <button type="button" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                              </a>
                          </div>
                      </td>
                    
                    </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>