<!DOCTYPE html>
<html lang="es">
 <%- include('../partials/head',{title:"Administrador"}) %> 
<body>

  <%- include('../partials/header') %> 
    <main class="admin">
        <h1>Admin</h1>
        <a href="/admin/crear">
            <button type="button" class="btn btn-primary">Crear Producto</button>
        </a>
        <div class="table-responsive">
        <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Marca</th>
                <th scope="col">Nombre</th>
                <th scope="col">producto</th>
                <th scope="col">stock</th>
                <th scope="col">Precio</th>
                <th scope="col">Des</th>
                <th scope="col">Accion</th>
              </tr>
            </thead>
            <tbody>
                <% productos.forEach(producto => { %>
                  <tr>
                      
                        <th scope="row"><a href="/admin/editar/<%= producto.id %>"><%= producto.id %> </a></th>
                        <td><a href="/admin/editar/<%= producto.id %>"><%= producto.marca %></a></td>
                        <td colspan="2"><a href="/admin/editar/<%= producto.id %>"><%= producto.titulo %></a></td>
                        <td><a href="/admin/editar<%= producto.id %> "><%= producto.stock %></a></td>
                        <td><a href="/admin/editar/<%= producto.id %> "><%= producto.precio %></a></td>
                        <td><a href="/admin/editar/<%= producto.id %> "><%= producto.descuento %></a></td>
                        <td>
                            <div>
                                <a href="/admin/editar/<%= producto.id%>">
                                    <button type="button" class="btn btn-success"><i class="fas fa-edit"></i></button>
                                </a>
                                <a href="/admin/delete">
                                    <button type="button" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                                </a>
                            </div>
                        </td>
                      
                      </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>