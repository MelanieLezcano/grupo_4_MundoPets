<!DOCTYPE html>
<html lang="es">

    <%- include('./partials/head',{title: 'Carrito'}) %> 

<body class="carritoUno">
    <header>
        <div class="top">
            <div class="logo">
                <a href="/"><img src="img/LogoMundoPets.png" alt="logo Mundo Pets"></a>
            </div>
        </div>
        <div class="Uno">
            <nav>
                <div class="carrito">
                    <i class="fas fa-shopping-cart"></i> <a href="/site_mundoPets/views/carrito.html"></a>
                    <!-- link carrito -->
                </div>
                <div class="buscador">
                    <input type="text" maxlength="100" placeholder="Buscar"> <!-- barra buscador -->
                </div>
                <span class="lupa">
                    <i class="fas fa-search"></i>
                </span>
                <div class="user">
                    <i class="fas fa-user"></i>
                    <a href="/site_mundoPets/views/login.html "></a><!-- login & register -->
