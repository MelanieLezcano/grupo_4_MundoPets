<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head',{title: locals.usuarioLogin.nombre}) %> 
<body>
    <%- include('../partials/header') %>
    <main  class="perfil">
        <section class="fondoCeleste">
            <article class="article1">
                <div class="imgPosicion">
                <div class="imgPerfil">
                    <img src="/img/usuarios/<%= locals.usuarioLogin.imagen %>  " alt="">
                </div>
            </div>
            <div class="fondoSaludo">
                <div class="saludo">Bienvenid@ <%= `${locals.usuarioLogin.rol == 1 ? 'Administrador' : 'Usuario' } ${locals.usuarioLogin.nombre}` %>!</div>
            </div>
            </article>
            <article class="article2">
                <ul>
                    <li>
                <a href="/usuarios/datosPerfil"><i class="fa-solid fa-user"></i>  Perfil</a>
            </li>
            <li>
                <a href="/usuarios/editarPerfil"><i class="fa-regular fa-user"></i>  Editar perfil</a>
            </li>
            <li>
                <a href="/usuarios/cambiarContrasenia"><i class="fa-solid fa-lock"></i>  Contraseña</a>
            </li>
            <% if (locals.usuarioLogin && (locals.usuarioLogin.rol) === 1) { %>
                <li>
                    <a href="/admin/listaUsuarios"><i class="fa-solid fa-users-gear"></i>  Usuarios</a>
                </li> 
              <% } %>
              <% if (locals.usuarioLogin && (locals.usuarioLogin.rol) === 1) { %>
                <li><i class="fa-solid fa-shop"></i>  Productos</li>
                <ul>
              <% } %>
              <% if (locals.usuarioLogin && (locals.usuarioLogin.rol) === 2) { %>
                <li><a href="/productos/carrito/2"><i class="fas fa-shopping-cart"></i>  Carrito</a></li>
              <% } %>
                <% if (locals.usuarioLogin && (locals.usuarioLogin.rol) === 1) { %>
                    <li><a href="/admin/lista"><i class="fa-solid fa-list-ul"></i>  Lista de productos</a></li>
                  <% } %>
                  <% if (locals.usuarioLogin && (locals.usuarioLogin.rol) === 1) { %>
                    <li><a href="/admin/crear"><i class="fa-solid fa-notes-medical"></i>  Crear producto</a></li>
                  <% } %>
                </ul>
                <% if (locals.usuarioLogin && (locals.usuarioLogin.rol) === 2) { %>
                    <form action="/usuarios/cerrarSesion?_method=DELETE" method="post">
                        <button type="submit" style="padding-left: 2rem;"><i class="fa-solid fa-right-from-bracket"></i>  Cerrar sesión</button>
                    </form>
                  <% } %>
                  <% if (locals.usuarioLogin && (locals.usuarioLogin.rol) === 1) { %>
                    <form action="/usuarios/cerrarSesion?_method=DELETE" method="post">
                        <button type="submit"><i class="fa-solid fa-right-from-bracket"></i>  Cerrar sesión</button>
                    </form>
                  <% } %>
            </ul>
        </article>
    </section>
    <section class="section2">
        <div class="fondoTitulo">
        <div class="titulo">Mis datos</div>
    </div>
        <article class="fondoBlanco1">
            <div class="tituloDatos">Datos de cuenta</div>
            <div class="subtitulo">Usuario</div>
            <div class="dato"><%= locals.usuarioLogin.nombre +" "+ locals.usuarioLogin.apellido%> </div>
            <div class="subtitulo">E-mail</div>
            <div class="dato"><%= locals.usuarioLogin.email %> </div>
        </article>
        <article  class="fondoBlanco2">
            <div class="tituloDatos">Datos personales</div>
            <div class="subtitulo">Nombre</div>
            <div class="dato"><%= locals.usuarioLogin.nombre %> </div>
            <div class="subtitulo">Apellido</div>
            <div class="dato"><%= locals.usuarioLogin.apellido %> </div>
            <div class="subtitulo">Contacto</div>
            <div class="dato"><% if (locals.usuarioLogin.contacto === '') { %>
                <%- "-" %> 
              <% } else { %>
                <%- locals.usuarioLogin.contacto %> 
                <% } %></div>
            <div class="subtitulo">Ciudad</div>
            <div class="dato"><% if (locals.usuarioLogin.ciudad === '') { %>
                <%- "-" %> 
              <% } else { %>
                <%- locals.usuarioLogin.ciudad %> 
                <% } %></div>
            <div class="subtitulo">Género</div>
            <div class="dato"><% if (locals.usuarioLogin.genero === '') { %>
                <%- "-" %> 
              <% } else { %>
                <%- locals.usuarioLogin.genero %> 
                <% } %></div>
        </article>
    </section>
            </main>





    
</body>
</html>