<!DOCTYPE html>
<html lang="es">
    
    <%- include('../partials/head',{title: 'register' }) %>
    
    <body>
        
        <%- include('../partials/header') %>
        
        <main class="register">
            <div class="centrar">
            <section class="section1">
                <h2>Registro</h2>
                <p class="subtitulo">completa los siguientes datos</p>
                <form action="" method="POST" enctype="multipart/form-data" id="formulario">
                    <article class="article1">
                        <div>
                        
                            <label class="imgPosicion" for="imagenes">
                                <div class="imgPerfil">
                                <img id="img-preview"
                                    src="/img/usuarios/foto_perfil_por_defecto.jpg" alt="">
                                <!--  <div class="imgHover">
                                        <p class="text-center">Seleciona una Imagen</p>
                                    </div> -->
                                </div>
                            </label>
                            <div class="custom-input-file">
                                <p class="imagentext">Imagen perfil</p>
                                <input id="imagen" type="file" name="imagenes" class="input-file"
                                    placeholder="Imagen del Producto" accept="img/*">
                            </div>
                                <p class="span text-danger" id="imgError" style="width: 500px;">
                                    <%= locals.errors && errors.imagen ? errors.imagen.msg : null %>
                                </p>
                            </div>

                        <div class="container bottom">
                            <label for="nombre">Nombre</label>
                            <input type="text" name="nombre" id="nombre" placeholder="Ingresa tu nombre"
                                value="<%= locals.old && old.nombre ? old.nombre : null %>">
                            <div id="nameContainer"></div>


                        </div>
                        <div class="container bottom">
                            <label for="apellido">Apellido</label>
                            <input type="text" name="apellido" id="apellido" placeholder="Ingresa tu  apellido"
                                value="<%= locals.old && old.apellido ? old.apellido : null%>">
                            <div id="apellidoContainer"></div>


                            <div></div>
                        </div>
                        <div class="container bottom">

                            <label for="email">Email</label>
                            <input type="email" name="email" id="email" placeholder="Ingresa un email"
                                value="<%= locals.old && old.email ? old.email : null %>">
                            <div id="emailContainer"></div>


                        </div>
                        <div class="container bottom">
                            <label for="contrasenia">Contraseña</label>
                            <div class="contrasenia">
                                <input type="password" name="contrasenia" id="contrasenia"
                                    placeholder="Ingresa una Contraseña">
                                <i class="fas fa-eye-slash" id="eye-contrasenia"></i>
                            </div>
                            <div id="contraseniaContainer"></div>
                            
                        </div>
                        <div class="container bottom">
                            <label for="contrasenia2"> Confirmá tu contraseña</label>
                            <div class="contrasenia">
                                <input type="password" name="contrasenia2" id="contrasenia2"
                                    placeholder="Confirma tu Contraseña">
                                <i class="fas fa-eye-slash" id="eye-contrasenia2"></i>
                            </div>
                            <div id="contraseniaContainer2"></div>


                           
                        </div>

                     

                        <button class="cuenta" type="submit" id="btn">Crear cuenta</button>
                    </article>
                        <!-- <button type="reset">Cancelar</button> -->
                    </form>
                    <h4>¿Ya tenés una cuenta? <a href="/usuarios/login">Inicia sesión</a></h4>
                </section>
            </div>
            </main>
            <%- include('../partials/footer') %>
                <script src="/javascripts/register.js"></script>
                <script src="/javascripts/imagenes.js"></script>

    </body>

</html>