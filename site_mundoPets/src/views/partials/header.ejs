<header>
  <div class="top">
    <div class="logo">
      <a href="/"><img src="/img/LogoMundoPets2.png" alt="logo Mundo Pets"></a>
    </div>
  </div>
  <div class="carrito">
    <% if (locals.usuarioLogin) { %>
    <a href="/productos/carrito/2"><i class="fas fa-shopping-cart"></i></a>
    <% } %>
  </div>
  <div class="usuario">
    <% if (locals.usuarioLogin) { %>
      <div class="bienvenido"><a  href="/usuarios/perfil"> Bienvenid@ <%=locals.usuarioLogin.nombre %></a>
        <form action="/usuarios/cerrarSesion?_method=DELETE" method="post">
          <button type="submit">Cerrar Sesion</button>
        </form>
      </div>
     
    <% } else { %>
      <div  class="sesion"> <a  href="/usuarios/login">Inicia Sesión
        <i class="fas fa-user-circle"></i>
      </a>
    </div>
     
     
      <% } %>
  </div>
   
    
    
  <div class="register">
    <% if (locals.usuarioLogin) { %>
      <% } else { %>
      <li><a href="/usuarios/register">Registrate</a></li>
      <% } %>
  </div>
  <div class="nuestrosProductos">
   <li><a href="/nuestrosProductos">Nuestros Productos</a></li> 
  </div>
<div class="buscador">
    <form action="/busqueda" method="get" target="_blank">
      <input type="text" name= "search" id="search" class="barrabusqueda" maxlength="100" placeholder="Buscar">
      <button type="submit" class="lupa"><i class="fa-solid fa-magnifying-glass"></i></button>
    </form>
    

  </div>
   
  <div class="admin">
    <% if (locals.usuarioLogin && (locals.usuarioLogin.rol) === 1) { %>
      <li><a href="/admin/lista">ADMIN</a></li>  
    <% } %>
  </div>
  <div class="burger">
    <input type="checkbox" name="burger" id="burger" class="burger-menu" checked>
    <label for="burger" class="burger-label"><i class="fas fa-bars"></i></label>
    <nav>
      <div class="center">
        <ul class="menu">
          <% if (locals.usuarioLogin) { %>
            <li><a href="/usuarios/perfil">Mi perfil</a></li> 
          <% } else { %>
            <li><a href="/usuarios/login">Ingresá</a></li>
            <% } %>
            <% if (locals.usuarioLogin) { %>
            <li><a href="/productos/carrito">Carrito</a></li>
            <% } %>
            <% if (locals.usuarioLogin) { %>
            <li><a href=" ">Mis compras</a></li>
            <% } %>
            <li><a href="/nuestrosProductos ">Nuestros Productos</a></li>
            <li><a href="/productos/Perro ">Categoría Perro</a></li>
            <li><a href="/productos/Gato ">Categoría Gato</a></li>
            <li><a href="/contacto">Contacto</a></li>
            <% if (locals.usuarioLogin) { %>
            <li> <form action="/usuarios/cerrarSesion?_method=DELETE" method="post">
              <button type="submit">Cerrar Sesion</button>
          </form></li>
            <% } %>
        </ul>
      </div>
    </nav>
  </div>
</header>    
            
